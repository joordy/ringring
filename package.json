{
  "name": "svelte-app",
  "version": "1.0.0",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@sveltech/routify": "^1.1.1-1",
    "eslint": "^7.15.0",
    "nollup": "^0.13.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.3.4",
    "rollup-plugin-hot": "^0.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte-hot": "^0.13.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0"
  },
  "scripts": {
    "start": "sirv public --single",
    "dev": "rollup -c -w",
    "__dev": "run-p watch:routify watch:rollup",
    "build": "rollup -c",
    "__pre-build": "routify --single-build",
    "__watch:rollup": "npm run dev:nollup",
    "__watch:routify": "routify",
    "dev:rollup": "rollup -c -w",
    "dev:livereload": "rollup -c -w --environment LIVERELOAD",
    "dev:nollup": "nollup -c --hot --port 5000 --content-base ./public"
  }
}
